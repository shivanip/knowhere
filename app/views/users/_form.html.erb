<div id="hero-unit" class="hero-unit">
<div class="col-xs-4 col-xs-offset-4 panel panel-default">
<div style="height: 20px"></div>
  <div class="panel-heading">
    <h1 class="text-center">Sign Up</h1>
  </div>
  <div class="panel-body">
  <%= form_for(@user) do |f| %>
    <% if @user.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

        <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
      <%= f.label :username, 'Alias' %><br>
      <%= f.text_field :username, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :password %><br>
      <%= f.password_field :password , class: "form-control"%><br>
    </div>
    <div class="form-group">
      <%= f.label :password_confirmation, 'Confirm Your Password' %><br>
      <%= f.password_field :password_confirmation, class: "form-control" %><br>
    </div>
    <div class="submit_button text-center">
      <%= f.submit "Create", id: "btn-contact", class: "btn btn-primary btn-lg" %>
    </div>
  <% end %>
  </div>
</div>
</div>